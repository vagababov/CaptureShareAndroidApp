<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HelloWorldActivity">

    <ImageView
        android:id="@+id/snapped_image"
        android:layout_above="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/snapButton"
            android:text="@string/snapPicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:onClick="onSnapPicture"/>
        <Button
            android:id="@+id/sharePictureButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharePicture"
            android:onClick="onSharePicture"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            />
        </LinearLayout>
</RelativeLayout>
